{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:debug": "cross-env NODE_OPTIONS='--inspect' next dev",
    "build": "next build",
    "start": "node -r newrelic node_modules/.bin/next start",
    "test:watch": "jest --coverage --watchAll",
    "test": "jest --coverage",
    "test:cov": "jest --ci --coverage --watchAll=false --reporters=default --reporters=jest-junit",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json}\"",
    "lint": "tsc --noEmit && eslint \"src/**/*.{js,jsx,ts,tsx}\" --fix",
    "lint:ci": "tsc --noEmit && eslint \"src/**/*.{js,jsx,ts,tsx}\""
  },
  "dependencies": {
    "@tailwindcss/aspect-ratio": "^0.2.0",
    "@tailwindcss/forms": "^0.2.1",
    "@tailwindcss/typography": "^0.4.0",
    "date-fns": "^2.11.1",
    "gray-matter": "^4.0.2",
    "next": "^10.0.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "remark": "^12.0.0",
    "remark-html": "^12.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^13.1.3",
    "@types/cookies": "^0.7.6",
    "@types/cors": "^2.8.10",
    "@types/jest": "^26.0.22",
    "@types/js-cookie": "^2.2.6",
    "@types/node": "^14.14.39",
    "@types/react": "^17.0.3",
    "@types/react-autosuggest": "^10.1.4",
    "@types/react-dom": "^17.0.3",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "autoprefixer": "^10.2.6",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "cross-env": "^7.0.3",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.7.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "^10.5.4",
    "postcss": "^8.3.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "tailwindcss": "^2.1.4",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
